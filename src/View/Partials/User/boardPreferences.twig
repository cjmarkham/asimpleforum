	<form role="form" method="post" action="javascript:void(0)" class="form-horizontal">

	<div class="form-group">
		<div class="col-sm-3">
			<label class="control-label">
				Email address
			</label>	
		</div>
		<div class="col-sm-6">
			<input data-event="return" data-action="user.saveEmail" type="text" class="form-control" name="email" value="{{ user.email }}" />
			<p class="help-block">
				Your email address will never be shared
			</p>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-3">
			<label class="control-label">
				Date format
			</label>	
		</div>
		<div data-event="change" data-action="user.saveDateFormat" class="col-sm-9">
			<select class="form-control" name="date-format">
				<option {% if settings.date_format == 'jS M y, H:i' %}selected{% endif %} value="jS M y, H:i">{{ "now"|date('jS M y, H:i') }}</option>
				<option {% if settings.date_format == 'jS M y, g:i a' %}selected{% endif %} value="jS M y, g:i a">{{ "now"|date('jS M y, g:i a') }}</option>

				<option {% if settings.date_format == 'M jS y, H:i' %}selected{% endif %} value="jS M y, H:i">{{ "now"|date('M jS y, H:i') }}</option>
				<option {% if settings.date_format == 'M jS y, g:i a' %}selected{% endif %} value="jS M y, g:i a">{{ "now"|date('M jS y, g:i a') }}</option>

			</select>
		</div>
	</div>
